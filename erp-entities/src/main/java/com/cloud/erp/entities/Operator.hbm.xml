<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.cloud.erp.entities">
    <class name="Operator" table="OPERATORS">
        
        <id name="oid" type="integer">
            <column name="O_ID"></column>
            <generator class="native"></generator>
        </id>
        
        <property name="loginName" type="string">
            <column name="LOGIN_NAME"></column>
        </property>
        
        <property name="password" type="string">
            <column name="PASSWORD"></column>
        </property>
        
        <property name="createTime" type="time">
            <column name="CREATE_TIME"></column>
        </property>
        
        <property name="loginTime" type="time">
            <column name="LOGIN_TIME"></column>
        </property>
        
        <property name="remarks" type="string">
            <column name="REMARKS"></column>
        </property>
        
    </class>
</hibernate-mapping>